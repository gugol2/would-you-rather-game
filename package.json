{
  "name": "would-you-rather-game",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.12",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "node-sass": "^4.13.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-redux-loading": "^1.0.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "typescript": "^3.9.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint --ignore-path .gitignore --ext .js .",
    "lint:fix": "npm run lint -- --fix",
    "test:once": "CI=true npm test -- --env=jsdom",
    "test:debug": "react-scripts --inspect-brk test --env=jsdom --runInBand",
    "test:coverage": "npm run test:once -- --coverage",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|ts|json|scss|html|md)\" ",
    "prettier:format": "npm run prettier -- --write",
    "prettier:check-format": "npm run prettier -- --list-different",
    "validate": "npm-run-all --parallel prettier:check-format lint test:coverage",
    "check-config": "npx jest --showConfig"
  },
  "jest": {
    "displayName": "client",
    "collectCoverageFrom": [
      "**/src/**/*.{js, ts, jsx}",
      "!**/src/components/**/index.js",
      "!**/src/**/serviceWorker.js",
      "!**/src/testHelpers/*",
      "!**/src/utils/*",
      "!**/src/reducers/index.js",
      "!**/src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      },
      "src/actions/**/*.js": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      },
      "src/reducers/**/*.js": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run validate"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-testing-library": "^3.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5"
  }
}
